{
  "compilerOptions": {
    "lib": ["dom", "esnext"],
    "target": "es2016",
    //    "module": "esnext",
    "jsx": "react-native",
    "allowJs": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": false
